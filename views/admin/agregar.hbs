<!-- MIAN -->

<div class="AdminMain">
    <div class="AdminContainer">
        <h2>Stardust Coincidence Admin</h2>
        <form action="/admin/novedades/agregar" method="post">
            <h3>Titulo</h3>
            <input type="text" name="titulo" placeholder="Titulo de la historia" title="El titulo solo acepta letras y espacios en blanco" pattern="^[A-Za-zÑñÁáÉéÍíÓóÚúÜü\s]+$" required>
            <h4>Sub Titulo</h4>
            <input type="text" name="subtitulo" placeholder="subtitulo" title="Este campo solo acepta texto." pattern="^[A-Za-zÑñÁáÉéÍíÓóÚúÜü\s]+$" required>
            <h4>Cuerpo</h4>
            <input type="text" name="cuerpo" placeholder="cuerpo" title="Este campo solo acepta texto." pattern="^[A-Za-zÑñÁáÉéÍíÓóÚúÜü\s]+$" required>
            <input type="submit" value="Guardar">
        </form>

        {{#if error}}
            <p>{{message}}</p>
        {{/if}}

    </div>
</div>